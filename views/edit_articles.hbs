<center>
<h1>{{title}}</h1>
</center>

<form method="POST" action="/articles/edit/{{Articles._id}}">
<input type="hidden" name="_id" value="{{Articles._id}}">
<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            <label>
                Title
            </label>
            <input type="text" class="form-control"name="title" value="{{Articles.title}}">
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            <label>
                Author
            </label>
            <input type="text" class="form-control"name="author"value="{{Articles.author}}">
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            <label>
                Body
            </label>
            <textarea type="text" class="form-control"name="body">{{Articles.body}}</textarea>
        </div>
        <input type="submit" class="btn btn-primary"name="submit" value="Submit">
    </div>
    

</div>
</form>